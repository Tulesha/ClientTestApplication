<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ClientTestApplication.Views.MainPageView">
  <Grid RowDefinitions="Auto, *">
    <DockPanel Grid.Row="0">
      <TextBlock Classes="H1">Добро пожаловать,</TextBlock>
      <TextBlock Margin="10,0,0,0" Classes="H1" Text="{Binding UserName}"/>
    </DockPanel>

    <DockPanel Margin="10" Grid.Row="1">
      <TextBlock>У вас</TextBlock>
      <TextBlock Margin="10,0,10,0" Text="{Binding UserName} дел"/>
      <TextBlock>незаконченных дел</TextBlock>
    </DockPanel>
  </Grid>
</UserControl>
